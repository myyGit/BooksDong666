@{
    Layout = "~/Views/Shared/_Layout_CommonReference.cshtml";
    ViewBag.Title = "用户详情";
}
@using QX_Frame.Data.DTO;
@{
    UserViewModel userViewModel = Model as UserViewModel;
}
<div class="cl pd-20" style=" background-color:#5bacb6">
    <img class="avatar size-XL l" src="~/H-ui/h-ui/images/ucnter/noavatar_small.gif">
    <dl style="margin-left:80px; color:#fff">
        <dt>
            <span class="f-18">@userViewModel.Name</span>
            <!-- <span class="pl-10 f-12">余额：40</span> -->
        </dt>
        <dd class="pt-10 f-12" style="margin-left:0"></dd>
    </dl>
</div>
<div class="pd-20">
    <table class="table">
        <tbody>
            <tr>
                <th class="text-r" width="80">员工ID：</th>
                <td>@userViewModel.UserUid</td>
            </tr>
            <tr>
                <th class="text-r">登录账号：</th>
                <td>@userViewModel.LoginId</td>
            </tr>
            <tr>
                <th class="text-r">姓名：</th>
                <td>@userViewModel.Name</td>
            </tr>
            <tr>
                <th class="text-r">状态：</th>
                <td>正常</td>
            </tr>
            <tr>
                <th class="text-r">权限信息：</th>
                <td>@userViewModel.LimitCode</td>
            </tr>
            <!-- <tr>
                <th class="text-r">积分：</th>
                <td>330</td>
            </tr> -->
        </tbody>
    </table>
</div>
